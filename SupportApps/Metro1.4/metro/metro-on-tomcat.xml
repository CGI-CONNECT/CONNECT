<project name="Metro on Tomcat" default="help">
    <property environment="env"/>
    <property name="tomcat.home" value="${env.CATALINA_HOME}"/>
    <property name="catalina.home" value="${tomcat.home}"/>
    <property name="catalina.lib.home" value="${catalina.home}/shared/lib"/>
    <property name="catalina.endorsed" value="${catalina.home}/common/endorsed"/>
    <property name="java.home" value="${env.JAVA_HOME}"/>

    <!-- Check if we are running JAVA SE 6 update release 3 or older --> 
    <condition property="jdk6">
        <or>
            <contains string="${java.version}" substring="1.6.0.0"/>
            <contains string="${java.version}" substring="1.6.0_1"/>
            <contains string="${java.version}" substring="1.6.0_2"/>
            <contains string="${java.version}" substring="1.6.0_03"/>
        </or>
    </condition>
 
    <target name="jdk6-message" if="jdk6">
        <echo message="NOTE: WSIT is being installed using JDK6."/>
        <echo/>
        <echo message="  The file 'web-services-api.jar' must be installed"/>
        <echo message="  into $JAVA_HOME/lib/endorsed for WSIT to prevent"/>
        <echo message="  conflicts between the JAX-WS 2.0 classes"/>
        <echo message="  bundled with Java SE 6 and JAX-WS 2.1 bundled with WSIT."/>
        <echo/>
        <echo message="  You must have write-permissions on the JDK 6 directory."/>
        <echo message="  This is a concern when using a system-wide JDK installation."/>
        <echo/>
        <echo message="  To install (only) webservices-api.jar, do the following:"/>
        <echo/>
        <echo message="  Invoke 'ant install-api' to install only"/>
        <echo message="  webservices-api.jar into the 'endorsed' directory."/>
        <echo/>
    </target>
    
    <target name="install" depends="uninstall,update-catalina-props" description="Install latest WSIT jars">
        <echo message="Installing WSIT 1.4 FCS for ${catalina.home} ..."/>

        <mkdir dir="${catalina.lib.home}"/>
        <copy toDir="${catalina.lib.home}" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-rt.jar"/>
                <include name="webservices-tools.jar"/>
                <include name="webservices-extra.jar"/>
                <include name="webservices-extra-api.jar"/>
            </fileset>
        </copy>
        <copy toDir="${catalina.endorsed}" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
        <antcall target="install-api"/>
        <echo message="... installation complete."/>
    </target>

    <target name="install-api" description="Installs 'webservices-api.jar'" depends="install-api-jdk5,install-api-jdk6"/>

    <target name="install-api-jdk5" description="Installs 'webservices-api.jar' into $CATALINA_HOME/shared/lib" unless="jdk6">
        <copy toDir="${catalina.lib.home}" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
    </target>
    
    <target name="install-api-jdk6" description="Installs 'webservices-api.jar' into $JAVA_HOME/lib/endorsed" if="jdk6">
        <mkdir dir="${java.home}/lib/endorsed"/>
        <copy toDir="${java.home}/lib/endorsed" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
    </target>

    <taskdef name="updatesharedloaderprop" classname="com.sun.xml.ws.installer.UpdateSharedLoaderProp">
        <classpath>
            <fileset dir="./lib" includes="webservices-rt.jar"/>
        </classpath>
    </taskdef>

    <target name="update-catalina-props">
        <updatesharedloaderprop catalinaprops="${catalina.home}/conf/catalina.properties"/>
    </target>

    <target name="uninstall">
        <delete quiet="true">
            <fileset dir="${catalina.lib.home}" includes="webservices-rt.jar, webservices-tools.jar, webservices-extra.jar, webservices-extra-api.jar"/>
        </delete>
        <delete quiet="true">
            <fileset dir="${catalina.endorsed}" includes="webservices-api.jar"/>
        </delete>
        <delete quiet="true"> 
            <fileset dir="${catalina.lib.home}" includes="webservices-api.jar"/>
        </delete>
        <delete quiet="true">
            <fileset dir="${java.home}/lib/endorsed" includes="webservices-api.jar"/>
        </delete>
    </target>

    <target name="help">
        <echo message="Usage:"/>
        <echo message="  ant -f metro-on-tomcat.xml {install,uninstall}"/>
        <echo/>
        <echo message="$CATALINA_HOME must be set to the installation directory of Tomcat."/>
        <echo/>
        <echo message="install:"/>
        <echo message="  Installs WSIT 1.4 FCS on Tomcat"/>
        <echo/>
        <echo message="uninstall: "/>
        <echo message="  Uninstalls WSIT 1.4 FCS from Tomcat"/>
        <echo/>
        <antcall target="jdk6-message"/>
    </target>
</project>
