  <target name="GlassFish.Configure.MemoryOptions">
    <property name="Domain.Xml.Tag" value="${GlassFish.Install.Path}\domains\domain1\config\12-22-2009.domain.memory.xml.tag "/>
    <ifnot test="${file::exists(Domain.Xml.Tag)}">
