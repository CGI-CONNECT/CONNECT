        <fileset basedir="${Common.Directory.ThirdParty.Path}\Xerces">
          <include name="*.jar"/>
        </fileset>
      </copy>
      <echo message="" file="${GlassFish.LibPath}\${Xerces.Tag.FileName}"/>
    </ifnot>
  </target>

  <target name="GlassFish.Update.SpringFramework">
