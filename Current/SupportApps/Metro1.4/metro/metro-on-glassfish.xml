<project name="Metro on GlassFish" default="help" basedir=".">
    <property file="../build.properties"/>
    <property environment="env"/>
    <property name="as.home" value="${env.AS_HOME}"/>
    <property name="as.lib.home" value="${as.home}/lib"/>
    <property name="backup.dir" value="${as.home}/.wsit-1.4"/>

    <condition property="notInstalled">
        <not>
            <available file="${backup.dir}"/>
        </not>
    </condition>

    <condition property="ext" value="" else=".bat">
        <os family="unix"/>
    </condition>

    <condition property="unix">
        <os family="unix"/>
    </condition>

    <condition property="glassfish-v3">
        <available file="${as.home}/modules" type="dir"/>
    </condition>

    <!-- Check if we are running JAVA SE 6 update release 3 or older --> 
    <condition property="jdk6">
        <or>
            <contains string="${java.version}" substring="1.6.0.0"/>
            <contains string="${java.version}" substring="1.6.0_1"/>
            <contains string="${java.version}" substring="1.6.0_2"/>
            <contains string="${java.version}" substring="1.6.0_03"/>
        </or>
    </condition>

    <condition property="endorsed-api-flagged">
        <equals arg1="${install.api}" arg2="true"/>
    </condition>

    <target name="jdk6-message" if="jdk6">
        <echo message="NOTE: Metro is being installed using JDK6."/>
        <echo/>
        <echo message="  The file 'web-services-api.jar' must be installed"/>
        <echo message="  into $JAVA_HOME/lib/endorsed for Metro to prevent"/>
        <echo message="  conflicts between the JAX-WS 2.0 classes"/>
        <echo message="  bundled with Java SE 6 and JAX-WS 2.1 bundled with Metro."/>
        <echo/>
        <echo message="  You must have write-permissions on the JDK 6 directory."/>
        <echo message="  This is a concern when using a system-wide JDK installation."/>
        <echo/>
        <echo message="  To install webservices-api.jar:"/>
        <echo/>
        <echo message="  Invoke 'ant install-api' to install only"/>
        <echo message="  webservices-api.jar into the 'endorsed' directory."/>
        <echo/>
    </target>

    <target name="gfv3-message" if="glassfish-v3">
        <echo message="NOTE: This script can only install Metro on GlassFish V2."/>
        <echo/>
        <echo message="  Please use the update center to install Metro on GlassFish V3:"/>
        <echo message="  https://glassfish.dev.java.net/downloads/quickstart/v3-preview2.html"/>
        <echo/>
    </target>

    <target name="gfv3-checkpoint" if="glassfish-v3">
        <antcall target="gfv3-message"/>
        <fail message="It looks like you are trying to install Metro on GlassFish V3. Please use the update center."/>
    </target>

    <target name="init" if="notInstalled" depends="gfv3-checkpoint"
            description="Backup existing Metro jars and tool scripts">
        <mkdir dir="${backup.dir}"/>
        <copy todir="${backup.dir}" failonerror="false">
            <fileset dir="${as.lib.home}" includes="webservices-rt.jar, webservices-tools.jar"/>
            <fileset dir="${as.lib.home}/endorsed" includes="webservices-api.jar"/>
        </copy>
    </target>

    <target name="install" depends="init" description="Install latest Metro jars">
        <echo message="Installing Metro 1.4 FCS on ${as.home} ..."/>

        <copy todir="${as.lib.home}" overwrite="true">
            <fileset dir="${basedir}/lib">
                <include name="webservices-rt.jar"/>
                <include name="webservices-tools.jar"/>
            </fileset>  
        </copy>
        <copy todir="${as.lib.home}/endorsed" overwrite="true">
            <fileset dir="${basedir}/lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
        <antcall target="install-api"/>
        <echo message="... installation complete."/>
    </target>

    <target name="install-api" if="jdk6" depends="gfv3-checkpoint"
            description="Installs 'webservices-api.jar' into $JAVA_HOME/lib/endorsed">
        <mkdir dir="${java.home}/lib/endorsed"/>
        <copy toDir="${java.home}/lib/endorsed" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="uninstall" unless="notInstalled"
            depends="gfv3-checkpoint"
            description="Restore original Metro jars and tool scripts">
        <echo message="Uninstalling Metro 1.4 FCS from ${as.home} ..."/>

        <copy todir="${as.lib.home}" overwrite="true">
            <fileset dir="${backup.dir}" includes="webservices-rt.jar, webservices-tools.jar"/>
        </copy>

        <copy todir="${as.lib.home}/endorsed" overwrite="true">
            <fileset dir="${backup.dir}" includes="webservices-api.jar"/>
        </copy>

        <delete dir="${backup.dir}" includeemptydirs="true"/>

        <delete quiet="true">
            <fileset dir="${java.home}/lib/endorsed" includes="webservices-api.jar"/>
        </delete>

        <echo message="... uninstall complete."/>
    </target>

    <target name="help">
        <echo message="install: "/>
        <echo message="  Installs Metro 1.4 FCS on GlassFish v2"/>
        <echo/>
        <echo message="uninstall: "/>
        <echo message="  Uninstalls Metro 1.4 FCS from GlassFish v2"/>
        <echo/>
        <echo message="$AS_HOME must be set to the installation directory of GlassFish v2."/>
        <echo/>
        <echo message="Usage:"/>
        <echo message="  ant -f metro-on-glassfish.xml {install,uninstall}"/>
        <antcall target="jdk6-message"/>
        <antcall target="gfv3-message"/>
    </target>

</project>
