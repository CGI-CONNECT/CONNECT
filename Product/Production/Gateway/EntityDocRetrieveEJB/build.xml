<project name="EntityDocRetrieveEJB" default="default" basedir="." xmlns:ejbjarproject="http://www.netbeans.org/ns/j2ee-ejbjarproject/3">
    <description>Builds, tests, and runs the project EntityDocRetrieveEJB.</description>
    <import file="nbproject/build-impl.xml"/>

    <property name="deploy.type" value="ejb" />
    <property name="deploy.isDeployable" value="true"/>

    <import file="../../../build.lib.xml" />

    <target name="build">
        <property name="target-to-call" value="dist" />
        <antcall target="call-target-in-isolation-if-out-of-date" />
    </target>
    <target name="clean-build" depends="clean,dist" />
    <target name="clean-test" depends="clean,dist" />
    <target name="build-test" depends="dist" />
    
    <target name="wsimport-service-NhincProxyDocRetrieveSecured" depends="wsimport-init">
        <property name="targetLocation-NhincProxyDocRetrieveSecured" location="${meta.inf}/wsdl/NhincProxyDocRetrieveSecured"/>
        <property name="sourceLocation-NhincProxyDocRetrieveSecured" location="${meta.inf}/xml-resources/web-services/NhincProxyDocRetrieveSecured/wsdl/"/>
        <copy todir="${targetLocation-NhincProxyDocRetrieveSecured}">
            <fileset dir="${sourceLocation-NhincProxyDocRetrieveSecured}"/>
        </copy>
        <property name="targetLocationSchemas-NhincProxyDocRetrieveSecured" location="${meta.inf}/wsdl/schemas"/>
        <property name="sourceLocationSchemas-NhincProxyDocRetrieveSecured" location="${meta.inf}/xml-resources/web-services/NhincProxyDocRetrieveSecured/schemas/"/>
        <copy todir="${targetLocationSchemas-NhincProxyDocRetrieveSecured}">
            <fileset dir="${sourceLocationSchemas-NhincProxyDocRetrieveSecured}"/>
        </copy>
    </target>
    <target name="wsimport-service-EntityDocRetrieveSecured" depends="wsimport-init">
        <property name="targetLocation-EntityDocRetrieveSecured" location="${meta.inf}/wsdl/EntityDocRetrieveSecured"/>
        <property name="sourceLocation-EntityDocRetrieveSecured" location="${meta.inf}/xml-resources/web-services/EntityDocRetrieveSecured/wsdl/"/>
        <copy todir="${targetLocation-EntityDocRetrieveSecured}">
            <fileset dir="${sourceLocation-EntityDocRetrieveSecured}"/>
        </copy>
        <property name="targetLocationSchemas-EntityDocRetrieveSecured" location="${meta.inf}/wsdl/schemas"/>
        <property name="sourceLocationSchemas-EntityDocRetrieveSecured" location="${meta.inf}/xml-resources/web-services/EntityDocRetrieveSecured/schemas/"/>
        <copy todir="${targetLocationSchemas-EntityDocRetrieveSecured}">
            <fileset dir="${sourceLocationSchemas-EntityDocRetrieveSecured}"/>
        </copy>
    </target>
    
    <target depends="compile" name="library-inclusion-in-archive">
        <copyfiles files="${file.reference.NhincSamlTokenLib.jar}" todir="${build.classes.dir}"/>
        <copyfiles files="${file.reference.NhinServiceProxy.jar}" todir="${build.classes.dir}"/>
        <copyfiles files="${file.reference.AggregatorLib.jar}" todir="${build.classes.dir}"/>
        <copyfiles files="${file.reference.GatewayInternalComponentProxy.jar}" todir="${build.classes.dir}"/>
    </target>
    <target depends="compile" name="library-inclusion-in-manifest">
        <copyfiles files="${file.reference.NhincSamlTokenLib.jar}" manifestproperty="manifest.reference.NhincSamlTokenLib.jar" todir="${dist.ear.dir}"/>
        <copyfiles files="${file.reference.NhinServiceProxy.jar}" manifestproperty="manifest.reference.NhinServiceProxy.jar" todir="${dist.ear.dir}"/>
        <copyfiles files="${file.reference.AggregatorLib.jar}" manifestproperty="manifest.reference.AggregatorLib.jar" todir="${dist.ear.dir}"/>
        <copyfiles files="${file.reference.GatewayInternalComponentProxy.jar}" manifestproperty="manifest.reference.GatewayInternalComponentProxy.jar" todir="${dist.ear.dir}"/>
        <manifest file="${build.ear.classes.dir}/META-INF/MANIFEST.MF" mode="update">
            <attribute name="Class-Path" value="${manifest.reference.NhincSamlTokenLib.jar} ${manifest.reference.NhinServiceProxy.jar} ${manifest.reference.GatewayInternalComponentProxy.jar} ${manifest.reference.AggregatorLib.jar} "/>
        </manifest>
    </target>
    <target depends="init" if="netbeans.home" name="undeploy-clean" unless="from.commandline">
        <nbundeploy failOnError="false" startServer="false"/>
    </target>
</project>
