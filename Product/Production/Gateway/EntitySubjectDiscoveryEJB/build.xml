<project name="EntitySubjectDiscoveryEJB" default="default" basedir="." xmlns:ejbjarproject="http://www.netbeans.org/ns/j2ee-ejbjarproject/3">
    <description>Builds, tests, and runs the project EntitySubjectDiscoveryEJB.</description>
    
    <property name="deploy.type" value="ejb" />
    <property name="deploy.isDeployable" value="true"/>

    <import file="nbproject/build-impl.xml"/>
    <import file="../../../build.lib.xml"/>
    <target name="build">
            <property name="target-to-call" value="dist"/>
            <antcall target="call-target-in-isolation-if-out-of-date"/>
    </target>
    <target name="clean-build" depends="clean,dist"/>
    <target name="clean-test" depends="clean,dist"/>
    <target name="build-test" depends="dist"/>

    <target name="wsimport-service-EntitySubjectDiscoverySecured" depends="wsimport-init">

        <property name="targetLocation-EntitySubjectDiscoverySecured" location="${meta.inf}/wsdl/EntitySubjectDiscoverySecured"/>
        <property name="sourceLocation-EntitySubjectDiscoverySecured" location="${meta.inf}/xml-resources/web-services/EntitySubjectDiscoverySecured/wsdl/"/>
        <copy todir="${targetLocation-EntitySubjectDiscoverySecured}">
            <fileset dir="${sourceLocation-EntitySubjectDiscoverySecured}"/>
        </copy>
        <property name="targetLocationSchemas-EntitySubjectDiscoverySecured" location="${meta.inf}/wsdl/schemas"/>
        <property name="sourceLocationSchemas-EntitySubjectDiscoverySecured" location="${meta.inf}/xml-resources/web-services/EntitySubjectDiscoverySecured/schemas/"/>
        <copy todir="${targetLocationSchemas-EntitySubjectDiscoverySecured}">
            <fileset dir="${sourceLocationSchemas-EntitySubjectDiscoverySecured}"/>
        </copy>
    </target>
    
    <target name="wsimport-service-NhincSubjectDiscoverySecured" depends="wsimport-init">
        <property name="targetLocation-NhincSubjectDiscoverySecured" location="${meta.inf}/wsdl/NhincSubjectDiscoverySecured"/>
        <property name="sourceLocation-NhincSubjectDiscoverySecured" location="${meta.inf}/xml-resources/web-services/NhincSubjectDiscoverySecured/wsdl/"/>
        <copy todir="${targetLocation-NhincSubjectDiscoverySecured}">
            <fileset dir="${sourceLocation-NhincSubjectDiscoverySecured}"/>
        </copy>
        <property name="targetLocationSchemas-NhincSubjectDiscoverySecured" location="${meta.inf}/wsdl/schemas"/>
        <property name="sourceLocationSchemas-NhincSubjectDiscoverySecured" location="${meta.inf}/xml-resources/web-services/NhincSubjectDiscoverySecured/schemas/"/>
        <copy todir="${targetLocationSchemas-NhincSubjectDiscoverySecured}">
            <fileset dir="${sourceLocationSchemas-NhincSubjectDiscoverySecured}"/>
        </copy>
    </target>

    <target depends="compile" name="library-inclusion-in-archive">
            <copy file="${file.reference.PatientCorrelationFacade.jar}" todir="${build.classes.dir}"/>
            <copy file="${file.reference.PatientCorrelationFacadeProxy.jar}" todir="${build.classes.dir}"/>
            <copy file="${file.reference.NhinServiceProxy.jar}" todir="${build.classes.dir}"/>
            <copy file="${file.reference.NhincSamlTokenLib.jar}" todir="${build.classes.dir}"/>
            <copy file="${file.reference.GatewayInternalComponentProxy.jar}" todir="${build.classes.dir}"/>
    </target>
	<target depends="compile" name="library-inclusion-in-manifest">
		<basename file="${file.reference.PatientCorrelationFacade.jar}" property="included.lib.reference.PatientCorrelationFacade.jar"/>
		<copy file="${file.reference.PatientCorrelationFacade.jar}" todir="${dist.ear.dir}"/>
		<basename file="${file.reference.PatientCorrelationFacadeProxy.jar}" property="included.lib.reference.PatientCorrelationFacadeProxy.jar"/>
		<copy file="${file.reference.PatientCorrelationFacadeProxy.jar}" todir="${dist.ear.dir}"/>
		<basename file="${file.reference.NhinServiceProxy.jar}" property="included.lib.reference.NhinServiceProxy.jar"/>
		<copy file="${file.reference.NhinServiceProxy.jar}" todir="${dist.ear.dir}"/>
		<basename file="${file.reference.NhincSamlTokenLib.jar}" property="included.lib.reference.NhincSamlTokenLib.jar"/>
		<copy file="${file.reference.NhincSamlTokenLib.jar}" todir="${dist.ear.dir}"/>
		<basename file="${file.reference.GatewayInternalComponentProxy.jar}" property="included.lib.reference.GatewayInternalComponentProxy.jar"/>
		<copy file="${file.reference.GatewayInternalComponentProxy.jar}" todir="${dist.ear.dir}"/>
		<manifest file="${build.ear.classes.dir}/META-INF/MANIFEST.MF" mode="update">
			<attribute name="Class-Path" value="${included.lib.reference.NhinServiceProxy.jar} ${included.lib.reference.GatewayInternalComponentProxy.jar} ${included.lib.reference.PatientCorrelationFacade.jar} ${included.lib.reference.PatientCorrelationFacadeProxy.jar} ${included.lib.reference.NhincSamlTokenLib.jar} ${included.lib.reference.PolicyEngineProxy.jar} ${included.lib.reference.PolicyEngineProxyImpl.jar}"/>
		</manifest>
	</target>
	<target depends="init" if="netbeans.home" name="undeploy-clean" unless="from.commandline">
		<nbundeploy failOnError="false" startServer="false"/>
	</target>
</project>
