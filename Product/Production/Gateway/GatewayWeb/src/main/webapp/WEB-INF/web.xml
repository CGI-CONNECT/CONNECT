<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DocQuery</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docquery.DocQuery</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocQuery</servlet-name>
        <url-pattern>/NhinService/RespondingGateway_Query_Service/DocQuery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EntityDocQuerySecured</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docquery.entity.EntityDocQuerySecured</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EntityDocQuerySecured</servlet-name>
        <url-pattern>/EntityService/EntityDocQuerySecured</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NhincProxyDocQuerySecured</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docquery.proxy.NhincProxyDocQuerySecured</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NhincProxyDocQuerySecured</servlet-name>
        <url-pattern>/EntityService/NhincProxyDocQuerySecured</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>DocQuery</web-resource-name>
            <url-pattern>/NhinService/RespondingGateway_Query_Service/DocQuery</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>EntityDocQuerySecured</web-resource-name>
            <url-pattern>/EntityService/EntityDocQuerySecured</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>NhincProxyDocQuerySecured</web-resource-name>
            <url-pattern>/EntityService/NhincProxyDocQuerySecured</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>CLIENT-CERT</auth-method>
        <realm-name>certificate</realm-name>
    </login-config>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
