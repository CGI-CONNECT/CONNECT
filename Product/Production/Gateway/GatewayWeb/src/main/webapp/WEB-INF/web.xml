<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DocQuery</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docquery.DocQuery</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocQuery</servlet-name>
        <url-pattern>/NhinService/RespondingGateway_Query_Service/DocQuery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EntityDocQuerySecured</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docquery.entity.EntityDocQuerySecured</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EntityDocQuerySecured</servlet-name>
        <url-pattern>/EntityService/EntityDocQuerySecured</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NhincProxyDocQuerySecured</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docquery.proxy.NhincProxyDocQuerySecured</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NhincProxyDocQuerySecured</servlet-name>
        <url-pattern>/EntityService/NhincProxyDocQuerySecured</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdapterDocQueryService</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.adapterdocquery.AdapterDocQueryService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdapterDocQueryService</servlet-name>
        <url-pattern>/AdapterProxyService/AdapterDocQuery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdapterDocRetrieveService</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.adapterdocretrieve.AdapterDocRetrieveService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdapterDocRetrieveService</servlet-name>
        <url-pattern>/AdapterProxyService/AdapterDocRetrieve</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EntityDocRetrieveSecured</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docretrieve.entity.EntityDocRetrieveSecured</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EntityDocRetrieveSecured</servlet-name>
        <url-pattern>/EntityService/EntityDocRetrieveSecured</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NhincProxyDocRetrieveSecured</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docretrieve.proxy.NhincProxyDocRetrieveSecured</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NhincProxyDocRetrieveSecured</servlet-name>
        <url-pattern>/EntityService/NhincProxyDocRetrieveSecured</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DocRetrieve</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.docretrieve.DocRetrieve</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocRetrieve</servlet-name>
        <url-pattern>/NhinService/RespondingGateway_Retrieve_Service/DocRetrieve</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdapterPolicyEngine</servlet-name>
        <servlet-class>gov.hhs.nhinc.policyengine.adapterpolicyengine.AdapterPolicyEngine</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdapterPolicyEngine</servlet-name>
        <url-pattern>/AdapterProxyService/AdapterPolicyEngine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NhincComponentAggregator</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.gateway.aggregator.NhincComponentAggregator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NhincComponentAggregator</servlet-name>
        <url-pattern>/GatewayInternalService/NhincComponentAggregator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GatewayPolicyEngineFacade</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.policy.GatewayPolicyEngineFacade</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GatewayPolicyEngineFacade</servlet-name>
        <url-pattern>/GatewayInternalService/PolicyEngineFacadeService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PolicyEngineTransformationService</servlet-name>
        <servlet-class>gov.hhs.fha.nhinc.gateway.policyenginetransformation.PolicyEngineTransformationService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PolicyEngineTransformationService</servlet-name>
        <url-pattern>/GatewayInternalService/PolicyEngineGatewayTransformationService</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>DocQuery</web-resource-name>
            <url-pattern>/NhinService/RespondingGateway_Query_Service/DocQuery</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>EntityDocQuerySecured</web-resource-name>
            <url-pattern>/EntityService/EntityDocQuerySecured</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>NhincProxyDocQuerySecured</web-resource-name>
            <url-pattern>/EntityService/NhincProxyDocQuerySecured</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>EntityDocRetrieveSecured</web-resource-name>
            <url-pattern>/EntityService/EntityDocRetrieveSecured</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>NhincProxyDocRetrieveSecured</web-resource-name>
            <url-pattern>/EntityService/NhincProxyDocRetrieveSecured</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>DocRetrieve</web-resource-name>
            <url-pattern>/NhinService/RespondingGateway_Retrieve_Service/DocRetrieve</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
