    <jaxws:endpoint 
        id="NhincProxyPatientDiscoverySecuredAsyncResp"
        address="/MsgProxy/NhincProxyPatientDiscoveryAsyncRespSecured" 
         implementor="gov.hhs.fha.nhinc.patientdiscovery._10.gateway.ws.NhincProxyPatientDiscoverySecuredAsyncResp">
