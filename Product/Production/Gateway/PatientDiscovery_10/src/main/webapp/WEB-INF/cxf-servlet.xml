        </jaxws:properties>
        <jaxws:inInterceptors>
            <ref bean="securityInInterceptor" />
        </jaxws:inInterceptors>
    </jaxws:endpoint>

    <jaxws:endpoint 
        id="NhincProxyPatientDiscovery"
        address="/MsgProxy/NhincProxyPatientDiscovery" 
        implementor="gov.hhs.fha.nhinc.patientdiscovery._10.gateway.ws.NhincProxyPatientDiscovery" >
    </jaxws:endpoint>



