        </jaxws:properties>
        <jaxws:inInterceptors>
            <ref bean="securityInInterceptor" />
        </jaxws:inInterceptors>
    </jaxws:endpoint>

    <jaxws:endpoint 
        id="EntityPatientDiscovery"
        address="/EntityPatientDiscovery"
        implementor="gov.hhs.fha.nhinc.patientdiscovery._10.gateway.ws.EntityPatientDiscoveryUnsecured">
    </jaxws:endpoint>

    <!-- MsgProxy/NhincProxy/Passthru services -->

    <jaxws:endpoint 
        id="NhincProxyPatientDiscoverySecured"
        address="/MsgProxy/NhincProxyPatientDiscoverySecured" 
        implementor="gov.hhs.fha.nhinc.patientdiscovery._10.gateway.ws.NhincProxyPatientDiscoverySecured">
