<project name="NhincAuditQueryEJB" default="default" basedir="." xmlns:ejbjarproject="http://www.netbeans.org/ns/j2ee-ejbjarproject/3">
    <description>Builds, tests, and runs the project NhincAuditQueryEJB.</description>
    <import file="nbproject/build-impl.xml"/>

    <property name="deploy.type" value="ejb" />
    <property name="deploy.isDeployable" value="true"/>
    
    <import file="../../../build.lib.xml"/>
    <target name="build">
        <property name="target-to-call" value="dist"/>
        <antcall target="call-target-in-isolation-if-out-of-date"/>
    </target>
    <target name="clean-build" depends="clean,dist"/>
    <target name="clean-test" depends="clean,dist"/>
    <target name="build-test" depends="dist"/>
   
    <target name="wsimport-service-AuditQuery" depends="wsimport-init">
    <!--
      <wsimport xendorsed="true" sourcedestdir="${build.generated.dir}/wsimport/service" extension="true" verbose="true" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${meta.inf}/xml-resources/web-services/AuditQuery/wsdl/NhinAuditLogQuery.wsdl" catalog="catalog.xml"/>
    -->
      <echo message="copy wsdl's"/>
      <copy todir="${basedir}/${meta.inf}/wsdl/AuditQuery">
        <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/AuditQuery/wsdl/"/>
      </copy>
      <echo message="copy schemas"/>
      <copy todir="${basedir}/${meta.inf}/wsdl/schemas/">
        <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/AuditQuery/schemas/"/>
      </copy>
    </target>
    
    <target depends="compile" name="library-inclusion-in-archive">
      <copy file="${file.reference.NhincSamlTokenLib.jar}" todir="${build.classes.dir}"/>
      <copy file="${file.reference.GatewayInternalComponentProxy.jar}" todir="${build.classes.dir}"/>
      <copy file="${file.reference.AdapterAuditQueryProxyImpl.jar}" todir="${build.classes.dir}"/>
      <copy file="${file.reference.AdapterAuditQueryProxy.jar}" todir="${build.classes.dir}"/>
    </target>
    
    <target depends="compile" name="library-inclusion-in-manifest">
      <basename file="${file.reference.NhincSamlTokenLib.jar}" property="included.lib.reference.NhincSamlTokenLib.jar"/>
      <copy file="${file.reference.NhincSamlTokenLib.jar}" todir="${dist.ear.dir}"/>
      <basename file="${file.reference.GatewayInternalComponentProxy.jar}" property="included.lib.reference.GatewayInternalComponentProxy.jar"/>
      <copy file="${file.reference.GatewayInternalComponentProxy.jar}" todir="${dist.ear.dir}"/>
      <basename file="${file.reference.AdapterAuditQueryProxyImpl.jar}" property="included.lib.reference.AdapterAuditQueryProxyImpl.jar"/>
      <copy file="${file.reference.AdapterAuditQueryProxyImpl.jar}" todir="${dist.ear.dir}"/>
      <basename file="${file.reference.AdapterAuditQueryProxy.jar}" property="included.lib.reference.AdapterAuditQueryProxy.jar"/>
      <copy file="${file.reference.AdapterAuditQueryProxy.jar}" todir="${dist.ear.dir}"/>
      <manifest file="${build.ear.classes.dir}/META-INF/MANIFEST.MF" mode="update">
        <attribute name="Class-Path" value="${included.lib.reference.NhincSamlTokenLib.jar} ${included.lib.reference.GatewayInternalComponentProxy.jar} ${included.lib.reference.AdapterAuditQueryProxyImpl.jar} ${included.lib.reference.AdapterAuditQueryProxy.jar}"/>
      </manifest>
    </target>
    
    <target depends="init" if="netbeans.home" name="undeploy-clean" unless="from.commandline">
      <nbundeploy failOnError="false" startServer="false"/>
    </target>
</project>
