<sun-ejb-jar>
    <enterprise-beans>
        <ejb>
            <ejb-name>EntitySubscribeSecuredService</ejb-name>
            <webservice-endpoint>
                <port-component-name>EntitySubscribeSecuredService</port-component-name>
                <endpoint-address-uri>/NhinConnect/EntityNotificationProducerSecured</endpoint-address-uri>
                <login-config>
                    <auth-method>CLIENT-CERT</auth-method>
                    <realm>certificate</realm>
                </login-config>
                <transport-guarantee>CONFIDENTIAL</transport-guarantee>
            </webservice-endpoint>
        </ejb>

        <ejb>
            <ejb-name>EntityUnsubscribeSecuredService</ejb-name>
