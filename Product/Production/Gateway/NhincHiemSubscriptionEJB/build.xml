<project name="NhincHiemSubscriptionEJB" default="default" basedir="." xmlns:ejbjarproject="http://www.netbeans.org/ns/j2ee-ejbjarproject/3">
    <description>Builds, tests, and runs the project NhincHiemSubscriptionEJB.</description>
    <import file="nbproject/build-impl.xml"/>

    <property name="deploy.type" value="ejb" />
    <property name="deploy.isDeployable" value="true"/>
    
    <import file="../../../build.lib.xml" />

    <target name="build">
        <property name="target-to-call" value="dist" />
        <antcall target="call-target-in-isolation-if-out-of-date" />
    </target>
    <target name="clean-build" depends="clean,dist" />
    <target name="clean-test" depends="clean,dist" />
    <target name="build-test" depends="dist" />
    
    
    <target name="wsimport-client-NhincSubscription" depends="wsimport-init"/>

    
    <target name="wsimport-service-HiemSubscription" depends="wsimport-init">
        <copy todir="${basedir}/${meta.inf}/wsdl/HiemSubscription">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/HiemSubscription/wsdl/"/>
        </copy>
        
        <echo message="copy schemas" />
        <copy todir="${basedir}/${meta.inf}/wsdl/schemas/">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/HiemSubscription/schemas/" />
        </copy>
    </target>
    
    <target name="wsimport-service-HiemUnsubscribe" depends="wsimport-init">
<!--
        <wsimport xendorsed="true" sourcedestdir="${build.generated.dir}/wsimport/service" extension="true" verbose="true" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${meta.inf}/xml-resources/web-services/HiemUnsubscribe/wsdl/NhinSubscription.wsdl" catalog="catalog.xml"/>
-->
        <copy todir="${basedir}/${meta.inf}/wsdl/HiemUnsubscribe">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/HiemUnsubscribe/wsdl/"/>
        </copy>
        
        <echo message="copy schemas" />
        <copy todir="${basedir}/${meta.inf}/wsdl/schemas/">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/HiemUnsubscribe/schemas/" />
        </copy>
    </target>
    
    <target name="wsimport-service-HiemNotify" depends="wsimport-init">
<!--
        <wsimport xendorsed="true" sourcedestdir="${build.generated.dir}/wsimport/service" extension="true" verbose="true" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${meta.inf}/xml-resources/web-services/HiemNotify/wsdl/NhinSubscription.wsdl" catalog="catalog.xml"/>
-->
        <copy todir="${basedir}/${meta.inf}/wsdl/HiemNotify">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/HiemNotify/wsdl/"/>
        </copy>
        
        <echo message="copy schemas" />
        <copy todir="${basedir}/${meta.inf}/wsdl/schemas/">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/HiemNotify/schemas/" />
        </copy>
    </target>

    <target depends="compile" name="library-inclusion-in-archive">
        <copy file="${file.reference.NhincSamlTokenLib.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.HiemProcessorLib.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.HiemUtilityLib.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.AdapterServiceProxy.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.resolver.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.serializer.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.xercesImpl.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.xml-apis.jar}" todir="${build.classes.dir}"/>
        <copy file="${file.reference.HiemSubscriptionRepository.jar}" todir="${build.classes.dir}"/>
        <copyfiles files="${file.reference.GatewayInternalComponentProxy.jar}" todir="${build.classes.dir}"/>
    </target>
    <target depends="compile" name="library-inclusion-in-manifest">
        <basename file="${file.reference.NhincSamlTokenLib.jar}" property="included.lib.reference.NhincSamlTokenLib.jar"/>
        <copy file="${file.reference.NhincSamlTokenLib.jar}" todir="${dist.ear.dir}"/>
        <basename file="${file.reference.HiemProcessorLib.jar}" property="included.lib.reference.HiemProcessorLib.jar"/>
        <copy file="${file.reference.HiemProcessorLib.jar}" todir="${dist.ear.dir}"/>
        <basename file="${file.reference.AdapterServiceProxy.jar}" property="manifest.reference.AdapterServiceProxy.jar"/>
        <copy file="${file.reference.AdapterServiceProxy.jar}" manifestproperty="" todir="${dist.ear.dir}"/>
        <basename file="${file.reference.HiemUtilityLib.jar}" property="included.lib.reference.HiemUtilityLib.jar"/>
        <copy file="${file.reference.HiemUtilityLib.jar}" todir="${dist.ear.dir}"/>
        <copy file="${file.reference.resolver.jar}" manifestproperty="manifest.file.reference.resolver.jar" todir="${dist.ear.dir}"/>
        <copy file="${file.reference.serializer.jar}" manifestproperty="manifest.file.reference.serializer.jar" todir="${dist.ear.dir}"/>
        <copy file="${file.reference.xercesImpl.jar}" manifestproperty="manifest.file.reference.xercesImpl.jar" todir="${dist.ear.dir}"/>
        <copy file="${file.reference.xml-apis.jar}" manifestproperty="manifest.file.reference.xml-apis.jar" todir="${dist.ear.dir}"/>
        <basename file="${file.reference.HiemSubscriptionRepository.jar}" property="included.lib.reference.HiemSubscriptionRepository.jar"/>
        <copy file="${file.reference.HiemSubscriptionRepository.jar}" todir="${dist.ear.dir}"/>
        <copyfiles files="${file.reference.GatewayInternalComponentProxy.jar}" manifestproperty="manifest.reference.GatewayInternalComponentProxy.jar" todir="${dist.ear.dir}"/>
        <manifest file="${build.ear.classes.dir}/META-INF/MANIFEST.MF" mode="update">
            <attribute name="Class-Path" value="${included.lib.reference.NhincSamlTokenLib.jar} 
                                                ${included.lib.reference.AdapterServiceProxy.jar}
                                                ${included.lib.reference.HiemProcessorLib.jar}
                                                ${included.lib.reference.HiemAdapterProxy.jar}
                                                ${included.lib.reference.HiemAdapterProxyImpl.jar}
                                                ${included.lib.reference.HiemUtilityLib.jar}
                                                ${included.lib.reference.HiemSubscriptionRepository.jar}
                                                ${manifest.reference.GatewayInternalComponentProxy.jar}"/>
        </manifest>
    </target>
    <target depends="init" if="netbeans.home" name="undeploy-clean" unless="from.commandline">
        <nbundeploy failOnError="false" startServer="false"/>
    </target>
</project>
