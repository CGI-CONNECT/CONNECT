<?xml version="1.0" encoding="UTF-8"?>
<definitions name="AdapterComponentDocRetrieveDeferredResponse"
             targetNamespace="urn:gov:hhs:fha:nhinc:adaptercomponentdocretrievedeferredresp"
             xmlns="http://schemas.xmlsoap.org/wsdl/"
             xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema"
             xmlns:tns="urn:gov:hhs:fha:nhinc:adaptercomponentdocretrievedeferredresp"
             xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap12/"
             xmlns:rs="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0"
             xmlns:wsaw="http://www.w3.org/2006/05/addressing/wsdl"
             xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/"
             xmlns:wsp="http://schemas.xmlsoap.org/ws/2004/09/policy"
             xmlns:dr="http://www.hhs.gov/healthit/nhin"
             xmlns:ihe="urn:ihe:iti:xds-b:2007"
             xmlns:wsu="http://docs.oasis-open.org/wss/2004/01/oasis-200401-wss-wssecurity-utility-1.0.xsd"
             xmlns:wsoma="http://schemas.xmlsoap.org/ws/2004/09/policy/optimizedmimeserialization">
    <documentation>IHE XDS.b Document Retrieve Response</documentation>
    <types>
    <xsd:schema elementFormDefault="qualified"
      targetNamespace="urn:ihe:iti:xds-b:2007"
      xmlns:tns="urn:ihe:iti:xds-b:2007">
      <!-- Include the message schema -->
      <xsd:include schemaLocation="../schemas/ihe/XDS.b_DocumentRepository.xsd"/>
    </xsd:schema>
    <xsd:schema elementFormDefault="qualified"
      targetNamespace="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0"
      xmlns:rs="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0">
      <!-- Include the message schema -->
      <xsd:include schemaLocation="../schemas/ebRS/rs.xsd"/>
    </xsd:schema>
    <!-- While no elements are directly used from these schema in the WSDL,
      they need to be present here in order for
      code generating toolkits to work properly -->
    <xsd:schema elementFormDefault="qualified"
      targetNamespace="urn:oasis:names:tc:ebxml-regrep:xsd:lcm:3.0"
      xmlns:lcm="urn:oasis:names:tc:ebxml-regrep:xsd:lcm:3.0">
      <!-- Include the message schema -->
      <xsd:include schemaLocation="../schemas/ebRS/lcm.xsd"/>
    </xsd:schema>
   <xsd:schema elementFormDefault="qualified"
      targetNamespace="urn:oasis:names:tc:ebxml-regrep:xsd:rim:3.0"
      xmlns:lcm="urn:oasis:names:tc:ebxml-regrep:xsd:rim:3.0">
      <!-- Include the message schema -->
      <xsd:include schemaLocation="../schemas/ebRS/rim.xsd"/>
    </xsd:schema>
    <xsd:schema elementFormDefault="qualified"
    targetNamespace="http://www.hhs.gov/healthit/nhin"
    xmlns:dr="http://www.hhs.gov/healthit/nhin">
        <!-- Include the message schema -->
        <xsd:include   schemaLocation="../schemas/nhin/RetrieveDocument.xsd"/>
    </xsd:schema>
  </types>
  <message name="RetrieveDocumentSetResponseMessage">
    <documentation>Retrieve Document Set Response</documentation>
    <part name="body" element="ihe:RetrieveDocumentSetResponse"/>
  </message>
  <message name="RetrieveDocumentSetAcknowledgementMessage">
    <documentation>Retrieve Document Set Acknowledgement</documentation>
    <part name="body" element="dr:DocRetrieveAcknowledgement"/>
   </message>
  <portType name="AdapterComponentDocRetrieveDeferredRespPortType">
    <operation name="RetrieveDocumentSetResponse">
      <input message="tns:RetrieveDocumentSetResponseMessage"/>
      <output message="tns:RetrieveDocumentSetAcknowledgementMessage"/>
    </operation>
  </portType>
  <binding name="AdapterComponentDocRetrieveDeferredRespBinding"
           type="tns:AdapterComponentDocRetrieveDeferredRespPortType">
    <soap:binding style="document"
                    transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="RetrieveDocumentSetResponse">
      <soap:operation soapAction="urn:ihe:iti:2007:RetrieveDocumentSetResponse"/>
      <input>
        <soap:body use="literal"/>
      </input>
      <output>
        <soap:body use="literal"/>
      </output>
    </operation>
  </binding>

  <service name="AdapterComponentDocRetrieveResponseService">
    <port name="AdapterComponentDocRetrieveResponsePortSoap"
          binding="tns:AdapterComponentDocRetrieveDeferredRespBinding">
      <soap:address
         location="http://localhost:${NhincHttpPort}/AdapterComponentDocRetrieveRespService"/>
    </port>
  </service>

<wsp:Policy wsu:Id="AdapterComponentDocRepositoryPolicy">
          <wsp:ExactlyOne>
              <wsp:All>
                  <wsoma:OptimizedMimeSerialization/>
              </wsp:All>
          </wsp:ExactlyOne>
    </wsp:Policy>
</definitions>

