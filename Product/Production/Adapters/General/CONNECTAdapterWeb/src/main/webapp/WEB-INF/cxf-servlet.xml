<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:soap="http://cxf.apache.org/bindings/soap"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
    <import resource="classpath:CONNECT-interceptor-beans.xml" />


    <!-- Adapter Policy Engine -->

    <jaxws:endpoint
        id="AdapterPolicyEngineSecured"
        address="/AdapterPolicyEngineSecured" 
         implementor="gov.hhs.fha.nhinc.policyengine.adapter.AdapterPolicyEngineSecured">

        <jaxws:properties>
            <entry key="ws-security.callback-handler" value="gov.hhs.fha.nhinc.callback.cxf.CXFSAMLCallbackHandler" />
            <entry key="ws-security.signature.properties" value="keystore.properties" />
            <entry key="ws-security.encryption.properties" value="truststore.properties" />
        </jaxws:properties>
        <jaxws:inInterceptors>
            <ref bean="securityInInterceptor" />
        </jaxws:inInterceptors>

    </jaxws:endpoint>

    <jaxws:endpoint 
       id="AdapterPolicyEngine"
        address="/AdapterProxyService/AdapterPolicyEngine" 
         implementor="gov.hhs.fha.nhinc.policyengine.adapter.AdapterPolicyEngine">
    </jaxws:endpoint>
    
    <!-- Adapter Policy Engine Orchestrator -->
    
    <jaxws:endpoint 
        id="AdapterPolicyEngineOrchestrator"
        address="/AdapterPolicyEngineOrchestrator"
         implementor="gov.hhs.fha.nhinc.policyengine.adapter.component.AdapterPolicyEngineOrchestrator">
    </jaxws:endpoint> 
    
    <!-- Adapter PEP -->
    
    <jaxws:endpoint
         id="AdapterPEPService"
        address="/AdapterPEP" 
         implementor="gov.hhs.fha.nhinc.policyengine.adapter.pep.AdapterPEPService"
        >
    </jaxws:endpoint>
    
    <!-- Adapter PIP -->
    
    <jaxws:endpoint 
         id="AdapterPIPService"
        address="/AdapterPIP" 
         implementor="gov.hhs.fha.nhinc.policyengine.adapter.pip.AdapterPIPService"
        >
    </jaxws:endpoint> 
    
    <!-- Adapter Document Registry -->
    
    <jaxws:endpoint 
        id="AdapterDocumentRegistry"
        address="/DocumentRegistry_Service"
         implementor="gov.hhs.fha.nhinc.docregistry.adapter.DocumentRegistryService"
       >
    </jaxws:endpoint>
    
    <!-- Adapter Document Repository -->
    
    <jaxws:endpoint 
         id="AdapterDocumentRepository"
        address="/DocumentRepository_Service"
         implementor="gov.hhs.fha.nhinc.docrepository.adapter.DocumentRepositoryService"
        >
    </jaxws:endpoint>
    
    <!-- Adapter Redaction Engine -->
    
    <jaxws:endpoint 
        id="AdapterComponentRedactionEngine"
        address="/AdapterComponentRedactionService" 
        implementor="gov.hhs.fha.nhinc.redactionengine.adapter.AdapterComponentRedactionEngine"
        >
    </jaxws:endpoint>
    
    <!-- Deferred Queue Manager -->   
    
    <jaxws:endpoint
        id="DeferredQueueManager"
        address="/DeferredQueueManager"
         implementor="gov.hhs.fha.nhinc.adapter.deferred.queue.DeferredQueueManager">
    </jaxws:endpoint>
    
    <!-- Adapter Authentication Service -->
    
    <jaxws:endpoint 
        id="AdapterAuthenticationService"
        address="/AdapterAuthentication" 
        implementor="gov.hhs.fha.nhinc.adapterauthentication.AdapterAuthenticationService">
    </jaxws:endpoint>
            
    <!-- Entity Performance Log Query -->
    
    <jaxws:endpoint 
         id="EntityPerformanceLogQuery"
        address="/EntityPerformanceLogQuery"
         implementor="gov.hhs.fha.nhinc.performancequery.entity.EntityPerformanceLogQuery">
    </jaxws:endpoint>

</beans>
