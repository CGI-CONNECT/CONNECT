<!-- Had to pull this out of jaxws-build.xml because it copied the wsdl, but for some reason it 
         did not copy the schemas.  We have to copy the schemas ourselves or it will not deploy.  -->
         
    <target name="wsimport-service-AdapterComponentMpi" depends="wsimport-init,wsimport-service-check-AdapterComponentMpi" unless="wsimport-service-AdapterComponentMpi.notRequired">
        <echo message="copy wsdl's" />
<!--
        <wsimport xendorsed="true" sourcedestdir="${build.generated.dir}/wsimport/service" extension="true" verbose="true" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${meta.inf}/xml-resources/web-services/AdapterComponentMpi/wsdl/AdapterComponentMpi.wsdl" catalog="catalog.xml"/>
-->
        <copy todir="${basedir}/${meta.inf}/wsdl/AdapterComponentMpi">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/AdapterComponentMpi/wsdl/"/>
        </copy>
        
        <echo message="copy schemas" />
        <copy todir="${basedir}/${meta.inf}/wsdl/schemas/">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/AdapterComponentMpi/schemas/" />
        </copy>
    </target>
    
    <target name="wsimport-service-AdapterComponentMpiSecured" depends="wsimport-init,wsimport-service-check-AdapterComponentMpiSecured" unless="wsimport-service-AdapterComponentMpiSecured.notRequired">
        <property name="service-wsdl-AdapterComponentMpiSecured" location="${meta.inf}/xml-resources/web-services/AdapterComponentMpiSecured/wsdl/AdapterComponentSecuredMpi.wsdl"/>
        <!--<wsimport sourcedestdir="${build.generated.dir}/wsimport/service" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${service-wsdl-AdapterComponentMpiSecured}" catalog="catalog.xml" extension="true" verbose="true" xnocompile="true"/>-->
        <property name="targetLocation-AdapterComponentMpiSecured" location="${meta.inf}/wsdl/AdapterComponentMpiSecured"/>
        <property name="sourceLocation-AdapterComponentMpiSecured" location="${meta.inf}/xml-resources/web-services/AdapterComponentMpiSecured/wsdl/"/>
        <copy todir="${targetLocation-AdapterComponentMpiSecured}">
            <fileset dir="${sourceLocation-AdapterComponentMpiSecured}"/>
        </copy>
        <copy todir="${basedir}/${meta.inf}/wsdl/schemas/">
            <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/AdapterComponentMpiSecured/schemas/" />
        </copy>
    </target>
    
    <target depends="init" if="no.dist.ear.dir" name="-deps-module-jar" unless="no.deps">
		    <property name="project.NhincLib.Absolute" location="${project.NhincLib}"/>
		    <property name="project.MpiLib.Absolute" location="${project.MpiLib}"/>
		    
        <ant dir="${project.MpiLib.Absolute}" antfile="${project.MpiLib.Absolute}/build.xml" inheritall="false" target="jar"/>
        <ant dir="${project.NhincLib.Absolute}" antfile="${project.NhincLib.Absolute}/build.xml" inheritall="false" target="jar"/>
    </target>
    <target depends="init" if="dist.ear.dir" name="-deps-ear-jar" unless="no.deps">
    
		    <property name="project.NhincLib.Absolute" location="${project.NhincLib}"/>
		    <property name="project.MpiLib.Absolute" location="${project.MpiLib}"/>

        <ant dir="${project.MpiLib.Absolute}" antfile="${project.MpiLib.Absolute}/build.xml" inheritall="false" target="jar"/>
        <ant dir="${project.NhincLib.Absolute}" antfile="${project.NhincLib.Absolute}/build.xml" inheritall="false" target="jar"/>
    </target>    
    <target depends="init" if="no.dist.ear.dir" name="deps-clean" unless="no.deps">
		    <property name="project.NhincLib.Absolute" location="${project.NhincLib}"/>
		    <property name="project.MpiLib.Absolute" location="${project.MpiLib}"/>
		    
		    
        <ant dir="${project.MpiLib.Absolute}" antfile="${project.MpiLib.Absolute}/build.xml" inheritall="false" target="clean"/>
        <ant dir="${project.NhincLib.Absolute}" antfile="${project.NhincLib.Absolute}/build.xml" inheritall="false" target="clean"/>
    </target>
    
    <target depends="compile" name="library-inclusion-in-archive">
        <copy file="${reference.MpiLib.jar}" todir="${build.classes.dir}"/>
        <copy file="${reference.NhincLib.jar}" todir="${build.classes.dir}"/>
    </target>
    <target depends="compile" name="library-inclusion-in-manifest">

        <basename file="${reference.MpiLib.jar}" property="included.lib.reference.MpiLib.jar"/>
        <copy file="${reference.MpiLib.jar}" todir="${dist.ear.dir}"/>
        <basename file="${reference.NhincLib.jar}" property="included.lib.reference.NhincLib.jar"/>
        <copy file="${reference.NhincLib.jar}" todir="${dist.ear.dir}"/>
        <manifest file="${build.ear.classes.dir}/META-INF/MANIFEST.MF" mode="update">
            <attribute name="Class-Path" value="${included.lib.reference.MpiLib.jar} ${included.lib.reference.NhincLib.jar} "/>
        </manifest>
    </target>
	<target depends="init" if="netbeans.home" name="undeploy-clean" unless="from.commandline">
        <nbundeploy failOnError="false" startServer="false"/>
    </target>    
</project>
