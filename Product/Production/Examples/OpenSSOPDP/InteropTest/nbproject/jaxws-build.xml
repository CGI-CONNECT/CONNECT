<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:webproject2="http://www.netbeans.org/ns/web-project/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.dir}/wsimport/client"/>
        <mkdir dir="${build.generated.dir}/wsimport/service"/>
        <mkdir dir="${build.generated.dir}/wsimport/binaries"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${java.home}/../lib/tools.jar:${j2ee.platform.wsimport.classpath}:${javac.classpath}"/>
        </taskdef>
        <condition property="conf-dir" value="${conf.dir}/" else="">
            <isset property="conf.dir"/>
        </condition>
    </target>
    <target name="wsimport-client-check-TestPEPServiceService" depends="wsimport-init">
        <condition property="wsimport-client-TestPEPServiceService.notRequired">
            <available file="${build.generated.dir}/wsimport/client/gov:hhs:fha:nhinc:testpepservice/TestPEPServiceService.java"/>
        </condition>
    </target>
    <target name="wsimport-client-TestPEPServiceService" depends="wsimport-init,wsimport-client-check-TestPEPServiceService" unless="wsimport-client-TestPEPServiceService.notRequired">
        <wsimport sourcedestdir="${build.generated.dir}/wsimport/client" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${conf-dir}xml-resources/web-service-references/TestPEPServiceService/wsdl/localhost_8080/TestPEP/TestPEPServiceService.wsdl" catalog="catalog.xml" extension="true" verbose="true" wsdlLocation="http://localhost:8080/TestPEP/TestPEPServiceService?wsdl" xnocompile="true"/>
    </target>
    <target name="wsimport-client-clean-TestPEPServiceService" depends="-init-project">
        <delete dir="${build.generated.dir}/wsimport/client/gov:hhs:fha:nhinc:testpepservice"/>
    </target>
    <target name="wsimport-service-check-InteropTestService" depends="wsimport-init">
        <condition property="wsimport-service-InteropTestService.notRequired">
            <available file="${build.generated.dir}/wsimport/service/gov/hhs/fha/nhinc/interoptestservice/InteropTestServiceService.java"/>
        </condition>
    </target>
    <target name="wsimport-service-InteropTestService" depends="wsimport-init,wsimport-service-check-InteropTestService" unless="wsimport-service-InteropTestService.notRequired">
        <wsimport sourcedestdir="${build.generated.dir}/wsimport/service" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${conf-dir}xml-resources/web-services/InteropTestService/wsdl/InteropTestService.wsdl" catalog="catalog.xml" extension="true" verbose="true" xnocompile="true"/>
        <copy todir="${build.web.dir}/WEB-INF/wsdl/InteropTestService">
            <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/InteropTestService/wsdl/"/>
        </copy>
    </target>
    <target name="wsimport-service-clean-InteropTestService" depends="-init-project">
        <delete dir="${build.generated.dir}/wsimport/service/gov/hhs/fha/nhinc/interoptestservice"/>
    </target>
    <target name="wsimport-client-generate" depends="wsimport-client-TestPEPServiceService"/>
    <target name="wsimport-client-compile" depends="-pre-pre-compile">
        <webproject2:javac srcdir="${build.generated.dir}/wsimport/client" classpath="${j2ee.platform.wsimport.classpath}:${javac.classpath}" destdir="${build.classes.dir}"/>
        <copy todir="${build.classes.dir}">
            <fileset dir="${build.generated.dir}/wsimport/binaries" includes="**/*.xml"/>
        </copy>
    </target>
    <target name="wsimport-service-generate" depends="wsimport-service-InteropTestService"/>
    <target name="wsimport-service-compile" depends="-pre-pre-compile">
        <webproject2:javac srcdir="${build.generated.dir}/wsimport/service" classpath="${j2ee.platform.wsimport.classpath}:${javac.classpath}" destdir="${build.classes.dir}"/>
    </target>
</project>
