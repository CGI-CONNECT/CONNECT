<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.connectopensource</groupId>
        <artifactId>Production</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>Deploy</artifactId>
    <packaging>pom</packaging>
    <name>CONNECT Deployment</name>
    <properties>
        <skip.unpack>true</skip.unpack>
        <ad.excluded>true</ad.excluded>
        <ad.excluded>true</ad.excluded>
        <dq.excluded>true</dq.excluded>
        <dr.excluded>true</dr.excluded>
        <ds.excluded>true</ds.excluded>
        <hiem.excluded>true</hiem.excluded>
        <gui.excluded>true</gui.excluded>
        <pd.excluded>true</pd.excluded>
    </properties>
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <modules>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTCommonWeb</artifactId>
                            <contextRoot>/CONNECTCommon</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTGatewayWeb</artifactId>
                            <contextRoot>/CONNECTGateway</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTAdapterWeb</artifactId>
                            <contextRoot>/CONNECTAdapter</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>PatientDiscovery_10</artifactId>
                            <contextRoot>/Gateway/PatientDiscovery/1_0</contextRoot>
                            <excluded>${pd.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>PatientDiscovery_a0</artifactId>
                            <contextRoot>/Adapter/PatientDiscovery/A_0</contextRoot>
                            <excluded>${pd.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>AdminDistribution_10</artifactId>
                            <contextRoot>/Gateway/AdminDistribution/1_0</contextRoot>
                            <excluded>${ad.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>AdminDistribution_20</artifactId>
                            <contextRoot>/Gateway/AdminDistribution/2_0</contextRoot>
                            <excluded>${ad.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>AdminDistribution_a0</artifactId>
                            <contextRoot>/Adapter/AdminDistribution/A_0</contextRoot>
                            <excluded>${ad.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentQuery_20</artifactId>
                            <contextRoot>/Gateway/DocumentQuery/2_0</contextRoot>
                            <excluded>${dq.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentQuery_a0</artifactId>
                            <contextRoot>/Adapter/DocumentQuery/A_0</contextRoot>
                            <excluded>${dq.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentRetrieve_20</artifactId>
                            <contextRoot>/Gateway/DocumentRetrieve/2_0</contextRoot>
                            <excluded>${dr.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentRetrieve_30</artifactId>
                            <contextRoot>/Gateway/DocumentRetrieve/3_0</contextRoot>
                            <excluded>${dr.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentRetrieve_a0</artifactId>
                            <contextRoot>/Adapter/DocumentRetrieve/A_0</contextRoot>
                            <excluded>${dr.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentSubmission_11</artifactId>
                            <contextRoot>/Gateway/DocumentSubmission/1_1</contextRoot>
                            <excluded>${ds.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentSubmission_20</artifactId>
                            <contextRoot>/Gateway/DocumentSubmission/2_0</contextRoot>
                            <excluded>${ds.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentSubmission_a0</artifactId>
                            <contextRoot>/Adapter/DocumentSubmission/A_0</contextRoot>
                            <excluded>${ds.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>HIEM_20</artifactId>
                            <contextRoot>/Gateway/HIEM/2_0</contextRoot>
                            <excluded>${hiem.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTConsumerPreferencesProfileGUI</artifactId>
                            <contextRoot>/</contextRoot>
                            <excluded>${gui.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTDeferredQueueManagerGUI</artifactId>
                            <contextRoot>/</contextRoot>
                            <excluded>${gui.excluded}</excluded>
                        </webModule>
                    </modules>
                    <version>6</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <skinnyWars>true</skinnyWars>
                    <!-- this causes all archives to be exploded on server 
                        SLOW!!! <includeLibInApplicationXml>true</includeLibInApplicationXml> -->
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>PD</id>
            <properties>
                <pd.excluded>false</pd.excluded>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>PatientDiscovery_10</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>PatientDiscovery_a0</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>PatientDiscoveryCore</artifactId>
                    <version>${project.parent.version}</version>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>PatientCorrelationCore</artifactId>
                    <version>${project.parent.version}</version>
                    <optional>false</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>AD</id>
            <properties>
                <ad.excluded>false</ad.excluded>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>AdminDistribution_10</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>AdminDistribution_20</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>AdminDistribution_a0</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>AdminDistributionCore</artifactId>
                    <version>${project.parent.version}</version>
                    <optional>false</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>DQ</id>
            <properties>
                <dq.excluded>false</dq.excluded>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentQuery_20</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentQuery_a0</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentQueryCore</artifactId>
                    <version>${project.parent.version}</version>
                    <optional>false</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>DR</id>
            <properties>
                <dr.excluded>false</dr.excluded>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentRetrieve_20</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentRetrieve_30</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentRetrieve_a0</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentRetrieveCore</artifactId>
                    <version>${project.parent.version}</version>
                    <optional>false</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>DS</id>
            <properties>
                <ds.excluded>false</ds.excluded>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentSubmission_11</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentSubmission_20</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentSubmission_a0</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>DocumentSubmissionCore</artifactId>
                    <version>${project.parent.version}</version>
                    <optional>false</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>HIEM</id>
            <properties>
                <hiem.excluded>false</hiem.excluded>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>HIEM_20</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>HIEMCore</artifactId>
                    <version>${project.parent.version}</version>
                    <optional>false</optional>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>GUI</id>
            <properties>
                <gui.excluded>false</gui.excluded>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>CONNECTConsumerPreferencesProfileGUI</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>CONNECTDeferredQueueManagerGUI</artifactId>
                    <version>${project.parent.version}</version>
                    <type>war</type>
                    <optional>false</optional>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-ear-plugin</artifactId>
                        <version>2.8</version>
                        <configuration>
                            <modules>
                                <webModule>
                                    <groupId>org.connectopensource</groupId>
                                    <artifactId>CONNECTConsumerPreferencesProfileGUI</artifactId>
                                    <contextRoot>/</contextRoot>
                                    <excluded>${gui.excluded}</excluded>
                                </webModule>
                                <webModule>
                                    <groupId>org.connectopensource</groupId>
                                    <artifactId>CONNECTDeferredQueueManagerGUI</artifactId>
                                    <contextRoot>/</contextRoot>
                                    <excluded>${gui.excluded}</excluded>
                                </webModule>
                            </modules>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>glassfish</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>connect-ear-deps</module>
                <module>ear</module>
                <module>glassfish</module>
            </modules>
        </profile>
        <profile>
            <id>websphere</id>
            <modules>
                <module>connect-ear-deps</module>
                <module>ear</module>
                <module>websphere</module>
            </modules>
        </profile>
    </profiles>
</project>
