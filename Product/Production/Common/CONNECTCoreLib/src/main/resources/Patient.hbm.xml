<hibernate-mapping package="gov.hhs.fha.nhinc.patientdb.model">
    <class name="Patient" table="patient">

        <id name="patientId">
            <generator class="native"/>
        </id>

        <property name="dateOfBirth" column="dateOfBirth"/>
    
        <property name="gender" column="gender"/>
    
        <property name="ssn" column="ssn"/>
    
        <bag name="addresses" inverse="true">
            <key column="patientId"/>
            <one-to-many class="Address"/>
        </bag>

        <bag name="identifiers" inverse="true">
            <key column="patientId"/>
            <one-to-many class="Identifier"/>
        </bag>

        <bag name="personnames" inverse="true">
            <key column="patientId"/>
            <one-to-many class="Personname"/>
        </bag>

        <bag name="phonenumbers" inverse="true">
            <key column="patientId"/>
            <one-to-many class="Phonenumber"/>
        </bag>

    </class>
</hibernate-mapping>