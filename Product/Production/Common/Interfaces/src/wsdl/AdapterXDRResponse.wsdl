<?xml version="1.0" encoding="utf-8"?>
<definitions name="AdapterXDRResponse"
  targetNamespace="urn:gov:hhs:fha:nhinc:adapterxdrresponse"
  xmlns:tns="urn:gov:hhs:fha:nhinc:adapterxdrresponse"
  xmlns="http://schemas.xmlsoap.org/wsdl/"
  xmlns:rs="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0"
  xmlns:wsaw="http://www.w3.org/2006/05/addressing/wsdl"
  xmlns:soap12="http://schemas.xmlsoap.org/wsdl/soap12/"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:xdr="urn:ihe:iti:xdr:2007">
  <documentation>IHE Adapter Component for XDR Response</documentation>
  <types>
    <xsd:schema>
      <xsd:import namespace="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0"
                  schemaLocation="../schemas/ebRS/rs.xsd"/>
      <xsd:import namespace="urn:ihe:iti:xdr:2007"
                  schemaLocation="../schemas/nhinc/common/xdr.xsd"/>
    </xsd:schema>
  </types>

  <message name="XDRResponseInputMessage">
    <documentation>XDR Response Input Message</documentation>
    <part name="body" element="rs:RegistryResponse"/>
  </message>
  <message name="XDRResponseAcknowledgementMessage">
    <documentation>XDR Response Acknowledgement Message</documentation>
    <part name="body" element="xdr:Acknowledgement"/>
  </message>

  <portType name="AdapterXDRResponse_PortType">
    <operation name="ProvideAndRegisterDocumentSet-bResponse">
      <input message="tns:XDRResponseInputMessage"
        wsaw:Action="tns:XDRResponseInput"/>
      <output message="tns:XDRResponseAcknowledgementMessage"
        wsaw:Action="tns:XDRResponseAcknowledgement"/>
    </operation>
  </portType>


  <binding name="AdapterXDRResponse_Binding" type="tns:AdapterXDRResponse_PortType">
    <soap12:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="ProvideAndRegisterDocumentSet-bResponse">
      <soap12:operation soapAction="tns:ProvideAndRegisterDocumentSet-bResponse"/>
      <input>
        <soap12:body use="literal"/>
      </input>
      <output>
        <soap12:body use="literal"/>
      </output>
    </operation>
  </binding>

  <service name="AdapterXDRResponse_Service">
    <port name="AdapterXDRResponse_Port_Soap12" binding="tns:AdapterXDRResponse_Binding">
      <soap12:address location="https://localhost:${HttpsDefaultPort}/AdapterXDRResponseService"/>
    </port>  
  </service>
</definitions>